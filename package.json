{
  "name": "makis-monorepo",
  "version": "1.0.0",
  "description": "마키스 시스템 모노레포",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "pnpm install",
    "dev": "concurrently \"pnpm --filter makis-server dev\" \"pnpm --filter makis-client dev\"",
    "dev:server": "pnpm --filter makis-server dev",
    "dev:client": "pnpm --filter makis-client dev",
    "build": "pnpm --parallel build",
    "start": "pnpm --parallel start",
    "lint": "pnpm --parallel lint",
    "test": "pnpm --parallel test",
    "clean": "pnpm --parallel clean"
  },
  "keywords": [
    "monorepo",
    "nestjs",
    "react",
    "makis"
  ],
  "author": "",
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c",
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.2"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
